{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "dts/*",
    "src/**/*",
    "src/**/*.vue",
    "tailwind/tailwind.colors.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": false,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@colors": [
        "./tailwind/tailwind.colors.ts"
      ]
    }
  }
}
